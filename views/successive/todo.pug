doctype html
head
  title To Do
  style.
    * {
      font-family: 'Arial'
    }
    li.todo {
      display: flex;
      flex-flow: row nowrap;
      justify-content: space-between;
      margin-right: 10em;
    }
    span.completed {
      cursor: pointer;
    }
    span.remove {
      color: red;
      cursor: pointer;
      margin-left: 1em;
    }
body
  h1= title
  ul.todos
    each todo, index in todos
      li.todo
        span.desc= todo.desc
        span
          span(title="Complete Item").completed= todo.completed
